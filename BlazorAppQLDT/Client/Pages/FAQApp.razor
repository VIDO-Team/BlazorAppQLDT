@page "/faqapps"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using BlazorAppQLDT.Shared
@attribute [Authorize]
@inject HttpClient Http
@inject IFAQAppService FAQAppService
@inject NavigationManager NavigationManager

<PageTitle>FAQ</PageTitle>

<h3>FAQ</h3>
<button class="btn btn-primary" @onclick="CreateNewFAQ">Create New FAQ</button>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>QuestionId</th>
            <th>Questtion</th>
            <th>Answers</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in FAQAppService.FQADetails)
       {
           <tr>
               <td>@question.Id</td>
               <td>@question.Question</td>
               <td>@question.FQA.Answers</td>
               <td>
                   <button class = "btn btn-warning" @onclick="(() => ShowFAQ(question.Id))">
                       <i class="oi oi-pencil"></i>
                   </button>
                   <button class = "btn btn-success" @onclick="(() => AddQuestion(question.FQAId))">
                       <i class="oi oi-plus"></i>
                   </button>
               </td>
           </tr>
       }
    </tbody>
</table>


@code {
    protected override async Task OnInitializedAsync()
    {
        await FAQAppService.GetQuestions();
    }
 
    void ShowFAQ(int id)
    {
        NavigationManager.NavigateTo($"editquestion/{id}");
    }
    void CreateNewFAQ()
    {
        NavigationManager.NavigateTo($"createfqa");
    }
    void AddQuestion(int id)
    {
        NavigationManager.NavigateTo($"addquestion/{id}");      
    }
    
}
